{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "api/app.py",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/(.*)",
      "dest": "api/app.py",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    }
  ],
  "functions": {
    "api/app.py": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "env": {
    "VERCEL": "1"
  }
}