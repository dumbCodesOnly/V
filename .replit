modules = ["python-3.11", "web", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cargo", "gmp", "jq", "libiconv", "libxcrypt", "openssl", "pkg-config", "postgresql", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export PATH=\"/home/runner/workspace/.pythonlibs/bin:$PATH\" && gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 42429
externalPort = 3000

[[ports]]
localPort = 44901
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]
build = ["pip", "install", "-r", "requirements.txt"]
