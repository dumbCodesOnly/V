modules = ["python-3.11", "web"]
[agent]
expertMode = true
integrations = ["python_database==1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "jq", "libiconv", "libxcrypt", "openssl", "pkg-config", "postgresql", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Trading Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Telegram Trading Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install flask requests aiohttp python-telegram-bot && python app.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]
