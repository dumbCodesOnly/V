{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "api/app.py",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/webhook/toobit",
      "dest": "api/app.py",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/api/exchange/(.*)",
      "dest": "api/app.py",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/(.*)",
      "dest": "api/app.py"
    }
  ],
  "env": {
    "VERCEL": "1"
  },
  "functions": {
    "api/app.py": {
      "maxDuration": 60
    }
  }
}